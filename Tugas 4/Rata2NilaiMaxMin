package main

import (
	"fmt"
)

type Student struct {
	Name  string
	Score int
}

func main() {
	var students []Student

	for i := 0; i < 5; i++ {
		var name string
		var score int

		fmt.Printf("Masukkan nama siswa %d: ", i+1)
		fmt.Scan(&name)

		fmt.Printf("Masukkan skor siswa %s: ", name)
		fmt.Scan(&score)

		student := Student{
			Name:  name,
			Score: score,
		}

		students = append(students, student)
	}

	totalScore := 0
	minScore := students[0].Score
	maxScore := students[0].Score

	for _, student := range students {
		totalScore += student.Score

		if student.Score < minScore {
			minScore = student.Score
		}

		if student.Score > maxScore {
			maxScore = student.Score
		}
	}

	averageScore := float64(totalScore) / float64(len(students))

	fmt.Printf("\nRata-rata skor: %.2f\n", averageScore)
	fmt.Printf("Siswa dengan skor terendah: %s (%d)\n", students[findStudentWithScore(students, minScore)].Name, minScore)
	fmt.Printf("Siswa dengan skor tertinggi: %s (%d)\n", students[findStudentWithScore(students, maxScore)].Name, maxScore)
}

func findStudentWithScore(students []Student, score int) int {
	for i, student := range students {
		if student.Score == score {
			return i
		}
	}
	return -1
}
